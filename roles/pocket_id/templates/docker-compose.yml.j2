version: '3.8'

services:
  pocket-id:
    image: {{ pocket_id_image }}
    container_name: {{ pocket_id_container_name }}
    restart: always
    ports:
      - "{{ pocket_id_port }}:80"
    volumes:
      - {{ pocket_id_data_dir }}:/app/backend/data
    environment:
      PUBLIC_APP_URL: "{{ pocket_id_public_app_url }}"
      TRUST_PROXY: "{{ pocket_id_trust_proxy }}"
