services:
  zerobyte:
    image: {{ zerobyte_image }}
    container_name: {{ zerobyte_container_name }}
    restart: unless-stopped
    cap_add:
      - SYS_ADMIN
    ports:
      - "{{ zerobyte_web_port }}:4096"
    devices:
      - /dev/fuse:/dev/fuse
    environment:
      - TZ={{ zerobyte_timezone }}
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - {{ zerobyte_data_dir }}:{{ zerobyte_data_dir }}:rshared
      - /run/docker/plugins:/run/docker/plugins
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/lib/docker/volumes:/var/lib/docker/volumes:ro

